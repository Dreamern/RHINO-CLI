    "version": "0.2.0",
    "configurations": [
        {
            "name": "rhino list",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "list"
            ]
        },
        {
            "name": "rhino run",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "run",
                "--np",
                "4",
                "sample:debug"
            ]
        },
        {
            "name": "rhino build",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "build",
                "-i",
                "sample:debug"
            ],
            "cwd": "${workspaceFolder}/samples/integration"
        }
    ]
}